<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div  style="text-align: center;padding: 5px;color: tomato;font-family: monospace;" ><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/new-password" method="POST">
            <div class="form-control">
                <label class="<%= (error.param === 'password') ? 'invalid' : ''%>"  for="password">Password</label>
                <input 
                class="<%= (error.param === 'password') ? 'invalid' : ''%>" 
                type="password" 
                name="password" 
                id="password"
                value="<%=password%>">
            </div>
            <input type="hidden" name="userId" value="<%= userId %>">
            <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Update Password</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>